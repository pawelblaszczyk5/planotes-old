{
  "private": true,
  "name": "planotes",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "dev": "concurrently \"npm:dev:*\"",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx ./app",
    "format": "prettier --write \"./app/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "test": "vitest --ui --open",
    "serve": "env-cmd remix-serve build",
    "dev:remix": "env-cmd -f .env.local remix dev",
    "dev:css": "postcss app/styles/index.css -o app/index.css --w",
    "dev:storybook": "concurrently \"start-storybook -p 3001\" \"npm run dev:css\"",
    "build:storybook": "npm run build:css && build-storybook",
    "build:css": "postcss app/styles/index.css -o app/index.css --env production",
    "build:remix": "remix build",
    "ci:lint": "eslint --ext .ts,.tsx,.js,.jsx ./app --max-warnings 0",
    "ci:tsc": "tsc",
    "ci:test": "vitest run --coverage",
    "postinstall": "remix setup node && node scripts/copyFonts.js",
    "render:build": "npm ci && npm run build && prisma migrate deploy",
    "render:start": "remix-serve build"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "@remix-run/react": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "clsx": "^1.1.1",
    "framer-motion": "^6.2.7",
    "nodemailer": "^6.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.2",
    "remix-auth": "^3.2.1",
    "remix-auth-email-link": "^1.2.0",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@fontsource/manrope": "^4.5.4",
    "@remix-run/dev": "^1.2.2",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@tsconfig/strictest": "^1.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vitejs/plugin-react": "^1.2.0",
    "@vitest/ui": "^0.5.3",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.17",
    "env-cmd": "^10.1.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.7",
    "eslint-plugin-testing-library": "^5.0.5",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "prisma": "^3.10.0",
    "storybook-addon-themes": "^6.1.0",
    "storybook-builder-vite": "^0.1.17",
    "typescript": "^4.5.5",
    "vite-tsconfig-paths": "^3.4.0",
    "vitest": "^0.5.3"
  },
  "engines": {
    "node": "=16"
  },
  "sideEffects": false,
  "volta": {
    "node": "16.14.0"
  }
}
